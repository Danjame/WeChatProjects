<view class="container">
  <view class="searchWrapper">
    <view class="searchBar">
      <input type="text" placeholder="{{placeholder}}" value="{{inputValue}}" bindblur="inputBlur" bindfocus="inputFocus" bindinput="inputChange"></input>
      <icon type="search" size="20"></icon>
    </view>
  </view>

  <searchHistory 
  wx:if="{{!focus && !inputValue}}"
  hisList="{{hisList}}"
  rankList="{{rankList}}"
  bind:selectHis="selectHis"
  bind:deleteHis="deleteHis"
  bind:selectRank="selectRank"
  >
  </searchHistory>

  <searchState
  wx:if="{{focus || inputValue}}"
  keyWords="{{keyWords}}"
  bind:selectResult="selectResult"
  >
  </searchState>


</view>