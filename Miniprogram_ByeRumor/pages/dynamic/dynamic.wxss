page, page>view{
  height: 100%
}

page>view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

page>view>view{
  flex: 1;
}

.header{
  min-height: 46rpx;
  padding: 20rpx 30rpx;
}

.header>video{
width: 690rpx;
}

.header>image{
width: 100%;
}

.content{
  padding: 16rpx 30rpx;
}

.content .text{
  font-size: 30rpx;
  text-align: justify; 
}

.content .infoSrc{
  font-size: 26rpx;
  margin-top: 16rpx;
}

.content .infoSrc .head:last-child{
  margin-left: 26rpx;
}

.head{
  font-weight: bold;
}

.readMore>view:first-child{
  padding-left: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: solid 2rpx #bbb;
}