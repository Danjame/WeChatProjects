<view>
  <!-- 顶部进度条 -->
  <quiz_progress wx:if="{{started}}">
  </quiz_progress>

  <view class="main">
    <!-- 开始按键 -->
    <quiz_startBtn wx:if="{{!started}}"
                   bind:startTest="startTest"></quiz_startBtn>
    <!-- 答题 -->
    <quiz_answer wx:if="{{started}}" 
                 question="{{questions[index]}}" 
                 bind:nextQues="nextQues">
    </quiz_answer>
  </view>
</view>