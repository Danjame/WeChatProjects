/* pages/quiz/quiz-answer/quiz-answer.wxss */
.ansWrapper {
  height: 100%;
}

.quesWrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.quesWrapper>view {
  width: 70%;
}

.title {
  font-size: 54rpx;
  flex: 1;
}

.txt {
  color: #aaa;
  font-size: 28rpx;
  line-height: 100rpx;
}

.btn {
  margin: 60rpx auto;
  padding: 0;
  background: #eee;
  border-radius: 28rpx;
  color: #000;
  font-size: 56rpx;
  font-weight: normal;
  line-height: 120rpx;
  text-align: center;
}

.active {
  background: #33cb98;
  color: #fff;
}