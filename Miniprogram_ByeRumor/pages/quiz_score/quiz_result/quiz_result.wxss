/* pages/quiz_score/quiz_result/quiz_result.wxss */

page {
  height: 90%;
}

.score-order {
  height: 100%;
  background: #33cb98;
  border-radius: 40rpx;
  margin-bottom: 10%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-wrap {
  flex: 1;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.order-num {
  width: 110rpx;
  height: 110rpx;
  margin: 26rpx 30rpx;
  line-height: 110rpx;
  background: #fff;
  border-radius: 50%;
  text-align: center;
}

.wrong {
  background: orange;
}

.btns {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.btns image {
  width: 90rpx;
  height: 90rpx;
}

.btns .shareBtn {
  width: 200rpx;
  flex-shrink: 0;
  padding: 0;
  background: transparent;
}

.btns .share-txt {
  font-weight: normal;
  font-size: 28rpx;
}
