/* pages/quiz_score/quiz_result/quiz_result.wxss */

.score-order {
    width: 600rpx;
    height: 840rpx;
    background: #33CB98;
    margin: 30rpx auto;
    border-radius: 40rpx;
    padding: 14rpx 7rpx;
    box-sizing: border-box;
}

.order-wrap {
    display: flex;
    flex-wrap: wrap
}

.order-num {
    width: 104rpx;
    line-height: 104rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    margin: 28rpx 46rpx;
}

.wrong {
    background: orange;
}

.btns {
  margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}

.btns image {
    width: 90rpx;
    height: 90rpx;
}

.btns .shareBtn {
    width: 200rpx;
    flex-shrink: 0;
    padding: 0;
    background: transparent;
}

.btns .share-txt {
    font-weight: normal;
    font-size: 28rpx;
    color: #fff width:200rpx;
}