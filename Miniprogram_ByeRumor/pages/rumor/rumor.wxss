page, page>view {
  height: 100%;
}

page>view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

page>view>view {
  flex: 1;
}

.header {
  min-height: 46rpx;
  padding: 20rpx 30rpx;
}

.header .head{
  font-size: 38rpx;
}

.content {
  padding: 16rpx 30rpx;
}

.content>view:first-child {
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-right: 70rpx;
  border-radius: 50%;
  border: solid 4rpx red;
  font-size: 70rpx;
  font-weight: 300;
  color: red;
  text-align: center;
  line-height: 100rpx;
}

.content .head {
  margin-bottom: 16rpx;
}

.content .srcInfo {
  font-size: 26rpx;
  margin-top: 16rpx;
}

.content .srcInfo .releaseTime {
  margin-left: 26rpx;
}

.readMore .head {
  padding-left: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: solid 2rpx #bbb;
}

.head {
  font-weight: bold;
  font-size: 32rpx;
}

.text {
  margin-top: 16rpx;
  font-size: 30rpx;
  text-align: justify;
}

.from, .releaseTime {
  font-weight: bold;
}
