/* components/quizAnalysis/quizAnalysis.wxss */
@import '../../icons/iconfont/iconfont.wxss';

.analWrapper {
  margin: 20rpx auto 0 auto;
  height: 100%;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.contentWrapper{
background-color: #33cb98;
border-radius: 40rpx;
padding: 20rpx 30rpx;
flex:1;
}

.iconWrapper{
 overflow: hidden;
}

.iconWrapper .icon-share{
  float: right;
  font-size:70rpx;
}

.tit {
  margin-bottom: 20rpx;
  padding: 0 3rpx;
  font-size: 54rpx;
  text-align: justify;
}

.anl {
  padding: 0 35rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: normal;
  line-height: 1.2;
  text-align: justify;
}

.judge {
  float: right;
  width: 134rpx;
  margin-top: 20rpx;
  border-radius: 50%;
  background: #fd6830;
  line-height: 134rpx;
  color: #fff;
  font-size: 64rpx;
  text-align: center;
}

.btn {
  width: 100%;
  margin: 30rpx auto 60rpx auto;
  padding: 0;
  background: #eee;
  border-radius: 28rpx;
  color: #000;
  font-size: 56rpx;
  font-weight: normal;
  line-height: 120rpx;
  text-align: center;
}