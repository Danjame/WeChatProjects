/* components/quizAnalysis/quizAnalysis.wxss */
@import '../../icons/iconfont/iconfont.wxss';

.analWrapper {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.analWrapper>view:first-child{
  width: 90%;
}

.analWrapper>view>view:first-child {
  flex-shrink: 0;
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  background-color: #33cb98;
  overflow: hidden;
}

.analWrapper .tit {
  margin: 20rpx 0;
  padding: 0 3rpx;
  font-size: 54rpx;
  text-align: justify;
}

.analWrapper .anl {
  padding: 0 35rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: normal;
  line-height: 1.2;
  text-align: justify;
}

.analWrapper .judge {
  float: right;
  width: 134rpx;
  margin-top: 20rpx;
  border-radius: 50%;
  background: #fd6830;
  line-height: 134rpx;
  color: #fff;
  font-size: 64rpx;
  text-align: center;
}

.analWrapper .btn {
  margin: 30rpx auto;
  padding: 0;
  background: #eee;
  border-radius: 28rpx;
  color: #000;
  font-size: 56rpx;
  font-weight: normal;
  line-height: 120rpx;
  text-align: center;
}