.shareWrapper {
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    position: fixed;
    background-color: rgb(125, 125, 125, 0.7);
}

.main {
    width: 90%;
    padding: 80rpx 50rpx;
    margin: 0 auto;
    margin-top: 160rpx;
    box-sizing: border-box;
    border-radius: 40rpx;
    background-color: #33cb98;
}

.main .content>view:first-child {
    font-size: 60rpx;
}

.main .content>view:last-child {
    text-align: center;
    font-size: 60rpx;
    font-weight: bold;
    margin-top: 50rpx;
    margin-bottom: 96rpx;
}

.btns {
  margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}

.btns image {
    width: 90rpx;
    height: 90rpx;
}

.btns .shareBtn {
    width: 200rpx;
    flex-shrink: 0;
    padding: 0;
    background: transparent;
}

.btns .share-txt {
    font-weight: normal;
    font-size: 28rpx;
    color: #fff width:200rpx;
}