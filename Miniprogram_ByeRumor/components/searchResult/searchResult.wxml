            <view class="info" wx:for="{{dynamic}}" data-index="{{index}}" wx:key="index" bindtap="enterDetail">
              <view class="sideBar dyBar"></view>
              <view class="infoItem">{{item.text}}</view>
            </view>
          </view>
        </scroll-view>
      </swiper-item>
    </swiper>

  </view>
