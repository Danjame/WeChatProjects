@import '../../icons/iconfont/iconfont.wxss';

.footWrapper {
    height: 225rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: solid 2rpx #ddd;
}

.footWrapper>view>view:first-child {
    font-size: 70rpx;
}

.footWrapper>view>view:last-child {
    margin-top: 2rpx;
    text-align: center;
    font-size: 20rpx;
}

.shareWrapper{
	width: 100%;
	display: flex;
	height: 225rpx;
	bottom: 0;
	border-top: solid 2rpx #ccc;
	flex-direction: column;
	align-items: center;
	background: #fff;
}

.shareWrapper .return{
	width:100rpx;
	margin-top: 10rpx;
	text-align: center;
	font-size: 36rpx;
}

.shareWrapper .btns {
	width: 100%;
    display: flex;
    justify-content: space-between;
}

.shareWrapper .btns image {
    width: 80rpx;
    height: 80rpx;
}

.shareWrapper .btns .shareBtn {
    width: 200rpx;
    flex-shrink: 0;
    padding: 0;
    background: transparent;
}

.shareWrapper .btns .share-txt {
    font-weight: normal;
    font-size: 28rpx;
    color: #fff width:200rpx;
}